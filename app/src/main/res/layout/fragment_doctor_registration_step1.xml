<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    tools:context="com.app.hakeem.fragment.FragmentDoctorRegistrationStep1">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/step_1" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="60dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btnRegister"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:minWidth="150dp"
            android:textColor="@color/green"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="16sp"

            android:text="@string/create_a_doctor_account"
            android:background="@drawable/rounded_white"
            android:layout_height="40dp"
            />
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_red_blue_corner"
            android:drawableLeft="@drawable/icon_username"
            android:drawablePadding="20dp"
            android:hint="@string/username"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_off" />

        <LinearLayout
            android:id="@+id/llFlightDiraction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:minHeight="50dp"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_select_blue"
                    android:button="@null"
                    android:buttonTint="@color/gray4"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/male"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_deselect_blue"
                    android:button="@null"
                    android:buttonTint="@color/gray1"
                    android:gravity="center"
                    android:text="@string/female"
                    android:textColor="@color/color_selector_blue"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/etMobile"
            android:maxLength="14"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_red_blue_corner"
            android:drawableLeft="@drawable/mobile_icon"
            android:drawablePadding="20dp"
            android:hint="@string/mobile"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_off" />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/etEmail"
            android:maxLength="50"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_red_blue_corner"
            android:drawableLeft="@drawable/icon_mail"
            android:drawablePadding="20dp"
            android:hint="@string/email"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_off" />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/etPassword"
            android:maxLength="16"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_red_blue_corner"
            android:drawableLeft="@drawable/icon_assword"
            android:drawablePadding="20dp"
            android:hint="@string/password"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_off" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:minWidth="150dp"
            android:textColor="@color/color_selector"
            android:textAlignment="center"
            android:textSize="14sp"
            android:text="@string/continue_tv"
            android:background="@drawable/bg_button"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/tvTerm_and_condition"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:textColor="@color/color_selector"
            android:textAlignment="center"
            android:textSize="14sp"
            android:text="@string/terms_and_condition"
            android:background="@drawable/rounded_white"
            android:layout_height="40dp"
            />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
