<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    tools:context="com.app.hakeem.fragment.FragmentDoctorRegistrationStep1">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ivStepIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/step_p_1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivStepIndicator"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_white"
                android:minWidth="150dp"
                android:text="@string/create_account"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:inputType="textCapWords"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_name"
                android:drawablePadding="20dp"
                android:hint="@string/name"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/llFlightDiraction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/button_select_blue"
                        android:button="@null"
                        android:buttonTint="@color/gray4"
                        android:checked="true"
                        android:gravity="center"
                        android:text="@string/male"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_deselect_blue"
                        android:button="@null"
                        android:buttonTint="@color/gray1"
                        android:gravity="center"
                        android:text="@string/female"
                        android:textColor="@color/color_selector_blue"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/mobile_icon"
                android:drawablePadding="20dp"
                android:hint="@string/mobile"
                android:inputType="number"
                android:maxLength="14"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_mail"
                android:drawablePadding="20dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_assword"
                android:drawablePadding="20dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button"
                android:minWidth="150dp"
                android:text="@string/continue_tv"
                android:textAlignment="center"
                android:textColor="@color/color_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTerm_and_condition"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_white"
                android:minWidth="150dp"
                android:text="@string/terms_and_condition"
                android:textAlignment="center"
                android:textColor="@color/color_selector"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
