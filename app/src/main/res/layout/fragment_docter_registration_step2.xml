<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    tools:context="com.app.hakeem.fragment.FragmentDoctorRegistrationStep1">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/step_2" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="100dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:minWidth="150dp"
                android:textColor="@color/green"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="@string/personal_info"
                android:background="@drawable/rounded_white"
                android:layout_height="40dp"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/etNationalaty"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_name"
                android:drawablePadding="20dp"
                android:hint="@string/nationalaty"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off" />


            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/etResidance"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_name"
                android:drawablePadding="20dp"
                android:hint="@string/residance"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off" />
            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/etWorkPlace"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_name"
                android:drawablePadding="20dp"
                android:hint="@string/workplace"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off" />
            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/etHomeLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_map_location"
                android:drawablePadding="20dp"
                android:hint="@string/home_location"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off" />
            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/etIdCard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_username"
                android:drawablePadding="20dp"
                android:hint="@string/id_card_passport"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off" />
            <Button
                android:id="@+id/btnContinue"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:minWidth="150dp"
                android:textColor="@color/color_selector"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="@string/continue_tv"
                android:background="@drawable/bg_button"
                android:layout_height="40dp"
                />
            <TextView
                android:id="@+id/tvTerm_and_condition"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:minWidth="150dp"
                android:textColor="@color/color_selector"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="@string/terms_and_condition"
                android:background="@drawable/rounded_white"
                android:layout_height="40dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
