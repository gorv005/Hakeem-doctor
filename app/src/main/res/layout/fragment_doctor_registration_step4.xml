<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    tools:context="com.app.hakeem.fragment.FragmentDoctorRegistrationStep1">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/step_4" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="60dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:minWidth="150dp"
                android:textColor="@color/green"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="@string/payment_details"
                android:background="@drawable/rounded_white"
                android:layout_height="40dp"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/etIban"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_credit_card"
                android:drawablePadding="20dp"
                android:hint="@string/iban"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off" />


            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/etConfirmIban"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_credit_card"
                android:drawablePadding="20dp"
                android:hint="@string/confirm_iban"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off" />
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btnPhotoUpload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_person"
                android:drawablePadding="20dp"
                android:hint="@string/photoUpload"
                android:textSize="14sp"
                android:paddingRight="100dp"
                android:textColor="@color/color_selector"
                android:textColorHint="@color/white_off" />

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:background="@drawable/background_border_image"
                android:layout_height="200dp" />
            <Button
                android:id="@+id/btnCompleteRegistration"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:minWidth="150dp"
                android:textColor="@color/color_selector"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="@string/complete_registration"
                android:background="@drawable/bg_button"
                android:layout_height="40dp"
                />
            <TextView
                android:id="@+id/tvTerm_and_condition"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:minWidth="150dp"
                android:textColor="@color/color_selector"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="@string/terms_and_condition"
                android:background="@drawable/rounded_white"
                android:layout_height="40dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
