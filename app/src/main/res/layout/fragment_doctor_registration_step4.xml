<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    tools:context="com.app.hakeem.fragment.FragmentDoctorRegistrationStep1">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/step_4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_white"
                android:minWidth="150dp"
                android:text="@string/payment_details"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etIban"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_credit_card"
                android:drawablePadding="20dp"
                android:hint="@string/iban"

                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/etConfirmIban"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_credit_card"
                android:drawablePadding="20dp"
                android:hint="@string/confirm_iban"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnPhotoUpload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableLeft="@drawable/icon_person"
                android:drawablePadding="20dp"
                android:hint="@string/photoUpload"
                android:paddingRight="100dp"
                android:textColor="@color/color_selector"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_border_image" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"

                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkBox_terms_and_cond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="" />
                <TextView
                    android:id="@+id/tvTerm_and_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:minWidth="150dp"
                    android:theme="@style/WhiteCheck"
                    android:text="@string/terms_and_condition"
                    android:textAlignment="center"
                    android:textColor="@color/color_selector"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCompleteRegistration"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button"
                android:minWidth="150dp"
                android:text="@string/complete_registration"
                android:textAlignment="center"
                android:textColor="@color/color_selector"
                android:textSize="14sp" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
