<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:minHeight="100dp">

            <RelativeLayout
                android:layout_width="96dp"
                android:layout_height="96dp"

                android:layout_gravity="right|center_vertical"
                android:gravity="left">

                <com.joooonho.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ivDoctor"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="centerCrop"
                    app:sriv_border_color="@color/green"
                    app:sriv_border_width="1dip"
                    app:sriv_left_bottom_corner_radius="10dip"
                    app:sriv_left_top_corner_radius="10dip"
                    app:sriv_oval="false"
                    app:sriv_right_bottom_corner_radius="10dip"
                    app:sriv_right_top_corner_radius="10dip" />

                <com.joooonho.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ivSpeciality"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    app:sriv_border_color="@color/green"
                    app:sriv_border_width="0.5dip"
                    app:sriv_left_bottom_corner_radius="5dip"
                    app:sriv_left_top_corner_radius="5dip"
                    app:sriv_oval="false"
                    app:sriv_right_bottom_corner_radius="5dip"
                    app:sriv_right_top_corner_radius="5dip" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:minHeight="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/docotr_name"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ivMsgImg"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:maxHeight="130dp"
                    android:minHeight="100dp"
                    android:scaleType="centerCrop" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray3" />

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/tvLike"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:drawablePadding="10dp"
                    android:text="12"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:drawableRight="@drawable/like"
                    android:textColor="@color/gray4" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/comment"
                    android:text="12"
                    android:textColor="@color/gray3" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/tvShare"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="12"
                    android:layout_centerInParent="true"

                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/share"
                    android:textColor="@color/gray4" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray3" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">


        <com.joooonho.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivProfileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/image_round_back"
            android:scaleType="centerCrop"
            app:sriv_border_color="@color/green"
            app:sriv_border_width="1dip"
            app:sriv_left_bottom_corner_radius="10dip"
            app:sriv_left_top_corner_radius="10dip"
            app:sriv_oval="false"
            app:sriv_right_bottom_corner_radius="10dip"
            app:sriv_right_top_corner_radius="10dip" />

        <ImageView
            android:id="@+id/ivLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/ivProfileImage"
            android:layout_below="@id/ivProfileImage"
            android:layout_marginLeft="19dp"
            android:background="@color/black"
            android:translationZ="-1dp" />

        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ivProfileImage"
            android:background="@drawable/image_round_back"
            android:hint="@string/type_comments"
            android:maxLength="250"
            android:paddingLeft="10dp"
            android:textColor="@color/blue"
            android:textColorHint="@color/gray1"
            android:textSize="14sp" />

        <ImageView

            android:id="@+id/ivSendTweet"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:layout_marginRight="20dp"
            android:src="@drawable/write_tweet_blue" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@null"
        android:dividerHeight="0dp"></ListView>
</LinearLayout>
