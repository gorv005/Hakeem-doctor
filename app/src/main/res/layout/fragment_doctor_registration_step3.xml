<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    tools:context="com.app.hakeem.fragment.FragmentDoctorRegistrationStep1">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/step_3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:paddingStart="50dp"
            android:paddingEnd="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_white"
                android:text="@string/cv"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etSpeciality"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_red_blue_corner"
                android:clickable="true"
                android:drawablePadding="20dp"
                android:drawableEnd="@drawable/icon_drop_down"
                android:editable="false"
                android:focusable="false"
                android:hint="@string/speciality"
                android:inputType="none"
                android:paddingStart="60dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerSpeciality"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="start"
                android:paddingStart="40dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/etCurrentGrade"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawablePadding="20dp"
                android:drawableEnd="@drawable/icon_drop_down"
                android:editable="false"
                android:focusable="false"
                android:hint="@string/current_grade"
                android:paddingStart="60dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerCurrentGrade"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="start"
                android:paddingStart="40dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/etSubSpeciality"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableStart="@drawable/icon_name"
                android:drawablePadding="20dp"
                android:hint="@string/subspecility"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etClassification"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_red_blue_corner"
                android:drawableStart="@drawable/icon_name"
                android:drawablePadding="20dp"
                android:hint="@string/classification"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnAddExperiance"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button"
                android:minWidth="150dp"
                android:text="@string/add_experience"
                android:textAlignment="center"
                android:textColor="@color/color_selector"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <include
                    layout="@layout/header_item_experiance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ListView
                    android:id="@+id/lvExperiance"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"></ListView>


            </LinearLayout>

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button"
                android:minWidth="150dp"
                android:text="@string/continue_tv"
                android:textAlignment="center"
                android:textColor="@color/color_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTerm_and_condition"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_white"
                android:minWidth="150dp"
                android:visibility="gone"

                android:text="@string/terms_and_condition"
                android:textAlignment="center"
                android:textColor="@color/color_selector"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
