<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:id="@+id/llExperience"
            android:background="@drawable/edittext_deselect_blue"
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_gravity="end"
                android:src="@drawable/cross"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <LinearLayout
                android:weightSum="2"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tvHospitalnameName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:hint=""
                android:layout_gravity="start"
                android:textSize="14sp"
                android:text="fkkj"
                android:gravity="start"
                android:textColor="@color/black"
                android:textColorHint="@color/white_off" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvExperienceDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:hint=""
                    android:paddingEnd="5dp"

                    android:textSize="14sp"
                    android:text="fkkj"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white_off" />
            </LinearLayout>
        <TextView
            android:id="@+id/tvExperienceDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:hint=""
            android:padding="5dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="sdsdg"
            android:maxLength="500"
            android:gravity="bottom"
            android:textColor="@color/gray1"
            android:textColorHint="@color/white_off" />


</LinearLayout>
    </RelativeLayout>


</RelativeLayout>
