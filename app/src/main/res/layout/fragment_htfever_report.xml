<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/ivDownloadPdf"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/add_temprature" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/temp_report"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/ivAddTemprature"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/add_temprature" />

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_red_blue_corner"
            android:text="@string/refresh_graph"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:layout_below="@id/rl"
        android:id="@+id/lineChart1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">


    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/etFrom"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_red_blue_corner"
        android:drawableStart="@drawable/icon_calendar"
        android:drawablePadding="20dp"
        android:hint="@string/from"
        android:editable="false"
        android:focusable="false"
        android:layout_marginEnd="10dp"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white_off" />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/etTo"
            android:layout_marginStart="10dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_red_blue_corner"
            android:drawableStart="@drawable/icon_calendar"
            android:drawablePadding="20dp"
            android:hint="@string/to"
            android:editable="false"
            android:focusable="false"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_off" />
    </LinearLayout>
</RelativeLayout>
