<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.hakeem.fragment.FragmentManageDoctorProfile">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/ivImageProfile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
         />
    <ScrollView
        android:layout_below="@+id/ivImageProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_deselect_blue"
            android:hint=""
            android:padding="5dp"
            android:textSize="14sp"
            android:text="@string/name"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textColorHint="@color/white_off" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/about_doctor"
                android:layout_height="30dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/About_Me"
            android:textColor="@color/blue"
            android:textSize="16sp" />
        </LinearLayout>
        <EditText
            android:id="@+id/etAbountMe"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_deselect_blue"
            android:hint=""
            android:padding="5dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text=""
            android:maxLength="500"
            android:gravity="start"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/white_off" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/education_doctor"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/Education"
                android:textColor="@color/blue"
                android:textSize="16sp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivAddEducation"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_width="30dp"
                android:tint="@color/blue"
                android:src="@drawable/plus"
                android:layout_height="30dp" />
            </RelativeLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/lvEducation"
            android:layout_width="match_parent"
            android:divider="@null"
            android:background="@color/black"
            android:dividerHeight="10dp"
            android:layout_height="wrap_content"></ListView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/location_doctor"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/Location"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittext_deselect_blue"
                android:hint=""
                android:padding="5dp"
                android:textSize="14sp"
                android:text="fkkj"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:textColor="@color/blue"
                android:textColorHint="@color/white_off" />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/experiance_doctor"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/Years_Of_Experience"
                android:textColor="@color/blue"
                android:textSize="16sp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivAddExperience"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_width="30dp"
                    android:tint="@color/blue"
                    android:src="@drawable/plus"
                    android:layout_height="30dp" />
            </RelativeLayout>
        </LinearLayout>

        <ListView
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:id="@+id/lvExperiance"
            android:layout_width="match_parent"
            android:dividerHeight="10dp"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
