<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.app.hakeem.fragment.FragmentDoctorRegistrationStep1">



        <LinearLayout
            android:layout_marginTop="60dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableRight="@drawable/icon_drop_down"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:text="@string/today_weight"
                android:textColor="@color/blue"
                android:textSize="14sp" />
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:background="@drawable/round_back_yellow"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    android:textStyle="bold"
                    android:text="@string/under_weight"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/round_back_green"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    android:textStyle="bold"
                    android:text="@string/normal_weight"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/round_back_orange"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    android:textStyle="bold"
                    android:text="@string/over_weight"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/round_back_red"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    android:textStyle="bold"
                    android:text="@string/obesity"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/weight_in_kg"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/etWeight"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rounded_red_blue_corner"
                            android:clickable="true"
                            android:drawablePadding="20dp"
                            android:drawableRight="@drawable/icon_drop_down"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="@string/speciality"
                            android:inputType="none"
                            android:paddingLeft="50dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_off"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinnerWeight"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_gravity="start"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:gravity="start"
                            android:paddingLeft="40dp"
                            android:visibility="invisible" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:text="@string/rest_hr"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/etHR"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rounded_red_blue_corner"
                            android:clickable="true"
                            android:drawablePadding="20dp"
                            android:drawableRight="@drawable/icon_drop_down"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="@string/speciality"
                            android:inputType="none"
                            android:paddingLeft="50dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_off"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinnerHR"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_gravity="start"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:gravity="start"
                            android:paddingLeft="40dp"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:text="@string/height_in_cm"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/etHeight"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rounded_red_blue_corner"
                            android:clickable="true"
                            android:drawablePadding="20dp"
                            android:drawableRight="@drawable/icon_drop_down"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="@string/speciality"
                            android:inputType="none"
                            android:paddingLeft="50dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_off"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinnerHeight"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_gravity="start"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:gravity="start"
                            android:paddingLeft="40dp"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:background="@drawable/dialog_round_back"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:maxLength="250"
                android:textSize="14sp"
                android:hint="@string/comments"
                android:gravity="top"
                android:background="@null"
                android:textColor="@color/white"
                android:textColorHint="@color/white_off" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:minWidth="150dp"
                android:textColor="@color/color_selector_white"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="@string/submit"
                android:background="@drawable/bg_button_blue"
                android:layout_height="40dp"
                />

        </LinearLayout>
</RelativeLayout>
