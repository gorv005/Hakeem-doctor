<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pattern"
    android:padding="10dp"
    tools:context="com.app.hakeem.fragment.FragmentSetting">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/notification"
            android:textColor="@color/blue"
            android:textSize="16sp" />


        <Switch
            android:id="@+id/switchNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:checked="true" />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_white"
        android:text="@string/language"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etLanguage"
        android:layout_alignParentRight="true"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_red_blue_corner"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/icon_drop_down"
        android:editable="false"
        android:focusable="false"
        android:hint="@string/speciality"
        android:inputType="none"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white_off"
        android:textSize="14sp" />

    <Spinner
        android:layout_below="@id/etLanguage"
        android:layout_alignParentRight="true"
        android:id="@+id/spinnerLanguage"
        android:layout_width="140dp"
        android:layout_height="0.5dp"
        android:layout_gravity="start"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:gravity="start"
        android:paddingLeft="40dp"
        android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>
